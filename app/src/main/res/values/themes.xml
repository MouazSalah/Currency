<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Currency" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/quantum_grey200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="rounded_edit_text">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@drawable/et_currency_bg</item>
        <item name="android:lineSpacingExtra">-6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:radius"> @dimen/_5sdp</item>
    </style>
</resources>
